config interface 'loopback'
	option device 'lo'
	option proto 'static'
	option ipaddr '127.0.0.1'
	option netmask '255.0.0.0'

config globals 'globals'
	# 'auto' or 'fd00::/8'
	option ula_prefix 'fd27:70fa:5c1d::/48'
	option packet_steering '1'

config device 'bridge0'
	option name 'br-lan'
	option type 'bridge'
	list ports 'eth2'
	list ports 'eth3'

config interface 'lan'
	option device 'br-lan'
	option proto 'static'
	option ipaddr '192.168.108.1'
	option netmask '255.255.255.0'
	option ip6assign '60'

config interface 'wan0'
	option device 'eth0'
	option proto 'dhcp'

config interface 'wan0v6'
	option device 'eth0'
	option proto 'dhcpv6'

config interface 'wan1'
	option device 'eth1'
	option proto 'dhcp'

config interface 'wan1v6'
	option device 'eth1'
	option proto 'dhcpv6'
