config interface 'loopback'
	option device 'lo'
	option proto 'static'
	option ipaddr '127.0.0.1'
	option netmask '255.0.0.0'

config globals 'globals'
	option ula_prefix 'fd03::/32'  # 'auto' or 'fd00::/8'
	option packet_steering '1'
	# option multipath '1'

config device 'bridge0'
	option name 'br-lan'
	option type 'bridge'
	list ports 'eth2'
	list ports 'eth3'

config interface 'lan'
	option device 'br-lan'
	option proto 'static'
	option ipaddr '192.168.1.1'
	option netmask '255.255.255.0'

	# config IPv6 (NAT6 for mwan)
	option ipv6 '1'
	option ip6class 'local'  # only assign the ULA-prefix
	option ip6assign '64'
	option ra_default '1'

#config interface 'lan_static'
#	option device '@lan'
#	option proto 'static'
#	option ipaddr '172.16.1.1'
#	option netmask '255.255.255.0'

config interface 'wan'
	option proto 'dhcp'
	option device 'eth0'
	option ipv6 '1'
	option peerdns '0'
	list dns '119.29.29.29'

config interface 'wanx'
	option proto 'static'
	option device 'eth1'
	option ipv6 '1'
	option defaultroute '0'
	#option peerdns '0'
